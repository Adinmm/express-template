
FROM node:22-alpine AS build

WORKDIR /app


COPY package*.json ./


RUN npm install


COPY . .


RUN npx prisma generate


RUN npm run build


FROM node:22-alpine

WORKDIR /app


COPY package*.json ./
RUN npm install --production


COPY --from=build /app/dist ./dist
COPY --from=build /app/node_modules/.prisma ./node_modules/.prisma


EXPOSE 3000

CMD ["node", "dist/index.js"]
